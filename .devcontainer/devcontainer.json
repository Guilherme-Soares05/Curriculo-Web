{
  "name": "Codespace com Desktop e Chrome",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {
      "password": "password",
      "webVnc": true
    },
    "ghcr.io/devcontainers-contrib/features/google-chrome:1": {}
  },
  "forwardPorts": [
    6080
  ],
  "postCreateCommand": "echo 'Ambiente pronto! Acesse a aba PORTS e abra a URL da porta 6080.'",
  "customizations": {
    "codespaces": {
      "openInClient": "web"
    }
  }
}